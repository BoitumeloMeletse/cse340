<div class="cse-container">
  <div class="management-wrapper">
    <!-- Display view title -->
    <% if (title) { %>
      <h1 class="page-title"><%= title %></h1>
    <% } %>
    
    <!-- Display view message -->
    <%- messages() %>
    
    <div class="management-content">
      <!-- Welcome message with first name -->
      <% if (locals.accountData) { %>
        <h2 class="welcome-greeting">Welcome <%= locals.accountData.account_firstname %></h2>
      <% } %>
      
      <div class="account-actions">
        <h2>Account Management</h2>
        <ul class="action-list">
          <li><a href="/account/update/<%= locals.accountData ? locals.accountData.account_id : '' %>" class="btn-link">Update Account Information</a></li>
          
          <!-- Show inventory management for Employee and Admin only -->
          <% if (locals.accountData && (locals.accountData.account_type === 'Employee' || locals.accountData.account_type === 'Admin')) { %>
            <h3>Inventory Management</h3>
            <p><a href="/inv/" class="btn-link">Manage Inventory</a></p>
          <% } %>
          
          <li><a href="/account/logout" class="btn-link">Logout</a></li>
        </ul>
      </div>
    </div>
  </div>
</div>

<style>
.cse-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
  padding: 20px;
}

.management-wrapper {
  padding: 40px;
  background: white;
  max-width: 600px;
  margin: 0 auto;
  border-radius: 15px;
  box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
}

.page-title {
  font-size: 2.5rem;
  color: #333;
  margin-bottom: 30px;
  text-align: center;
  font-weight: bold;
}

.welcome-greeting {
  font-size: 1.8rem;
  color: #28a745;
  text-align: center;
  margin-bottom: 30px;
  font-weight: bold;
}

.account-actions h2 {
  color: #333;
  margin-bottom: 20px;
}

.account-actions h3 {
  color: #007bff;
  margin-top: 30px;
  margin-bottom: 15px;
}

.action-list {
  list-style: none;
  padding: 0;
}

.action-list li {
  margin-bottom: 15px;
}

.btn-link {
  display: inline-block;
  background: linear-gradient(135deg, #00bcd4, #00acc1);
  color: white;
  text-decoration: none;
  padding: 12px 25px;
  border-radius: 8px;
  font-weight: bold;
  transition: all 0.3s ease;
}

.btn-link:hover {
  background: linear-gradient(135deg, #00acc1, #0097a7);
  transform: translateY(-2px);
  box-shadow: 0 4px 15px rgba(0, 188, 212, 0.3);
}
</style>
