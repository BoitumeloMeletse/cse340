<div class="cse-container">
  <div class="vehicle-detail-wrapper">
    <% if (title) { %>
      <h1 class="welcome-heading">Vehicle Details</h1>
    <% } %>

    <div class="featured-vehicle">
      <div class="vehicle-content">
        <div class="vehicle-text">
          <h2 class="vehicle-title"><%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %></h2>
          <div class="vehicle-features">
            <p class="feature-item">Year: <%= vehicle.inv_year %></p>
            <p class="feature-item">Color: <%= vehicle.inv_color %></p>
            <p class="feature-item">Mileage: <%= new Intl.NumberFormat("en-US").format(vehicle.inv_miles) %> miles</p>
          </div>
          <div class="price-section">
            <span class="price-label">Price:</span>
            <span class="price-amount">$<%= new Intl.NumberFormat("en-US").format(vehicle.inv_price) %></span>
          </div>
          <div class="price-section">
            <span class="price-label">Price:</span>
            <span class="price-amount">$<%= new Intl.NumberFormat("en-US").format(vehicle.inv_price) %></span>
          </div>
          
          <% if (locals.loggedin && locals.accountData.account_type === "Client") { %>
            <form action="/purchase/buy" method="post" style="margin-top:15px;">
              <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
              <button type="submit" class="own-today-btn">Buy Now</button>
            </form>
          <% } %>
          
          <% if (locals.loggedin && 
                 (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee")) { %>
            <div style="margin-top:15px;">
              <a href="/purchase/view/<%= vehicle.inv_id %>" class="btn-admin">View Purchases</a>
            </div>
          <% } %>
        </div>
        <div class="vehicle-image-section">
          <img src="<%= vehicle.inv_image %>" alt="<%= vehicle.inv_year %> <%= vehicle.inv_make %> <%= vehicle.inv_model %>" class="vehicle-main-image">
        </div>
      </div>
    </div>

    <div class="bottom-sections">
      <div class="vehicle-specs">
        <h3>Vehicle Specifications</h3>
        <div class="specs-grid">
          <div class="spec-card">
            <div class="spec-icon">üöó</div>
            <div class="spec-label">Make</div>
            <div class="spec-value"><%= vehicle.inv_make %></div>
          </div>
          <div class="spec-card">
            <div class="spec-icon">üè∑Ô∏è</div>
            <div class="spec-label">Model</div>
            <div class="spec-value"><%= vehicle.inv_model %></div>
          </div>
          <div class="spec-card">
            <div class="spec-icon">üìÖ</div>
            <div class="spec-label">Year</div>
            <div class="spec-value"><%= vehicle.inv_year %></div>
          </div>
          <div class="spec-card">
            <div class="spec-icon">üé®</div>
            <div class="spec-label">Color</div>
            <div class="spec-value"><%= vehicle.inv_color %></div>
          </div>
        </div>
      </div>

      <div class="vehicle-description">
        <h3>Vehicle Description</h3>
        <div class="description-content">
          <p><%= vehicle.inv_description %></p>
          <div class="description-highlights">
            <p class="highlight">"Perfect for any adventure!"</p>
            <p class="highlight">"Great condition and ready to drive!"</p>
            <p class="highlight">"Don't miss out on this amazing deal!"</p>
          </div>
        </div>
      </div>
    </div>
     <!-- üîΩ Customer Reviews Section -->
     <div class="vehicle-reviews">
      <h3>Customer Reviews</h3>

      <% if (locals.loggedin) { %>
        <form method="POST" action="/reviews/add">
          <textarea name="review_text" rows="4" required minlength="5"></textarea>
          <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
          <button type="submit">Submit Review</button>
        </form>
      <% } else { %>
        <p><a href="/account/login">Log in</a> to add a review.</p>
      <% } %>

      <ul>
        <% reviews.forEach(r => { %>
          <li>
            <strong><%= r.account_firstname %> <%= r.account_lastname %>:</strong>
            <%= r.review_text %> 
            <em>(<%= r.review_date.toLocaleDateString() %>)</em>

            <% if (locals.accountData && 
                  (locals.accountData.account_type === "Admin" || locals.accountData.account_type === "Employee")) { %>
              <form method="POST" action="/reviews/delete" style="display:inline">
                <input type="hidden" name="review_id" value="<%= r.review_id %>">
                <input type="hidden" name="inv_id" value="<%= vehicle.inv_id %>">
                <button type="submit">Delete</button>
              </form>
            <% } %>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
</div>

<style>
/* CSE Motors Styling */
.cse-container {
  background: white;
  border: 8px solid;
  border-image: repeating-linear-gradient(
    45deg,
    #000 0px,
    #000 10px,
    #fff 10px,
    #fff 20px
  ) 8;
  min-height: 80vh;
  margin: 20px;
  position: relative;
}

.vehicle-detail-wrapper {
  padding: 30px;
  background: white;
}

.welcome-heading {
  font-size: 2.5rem;
  color: #333;
  margin-bottom: 30px;
  text-align: left;
  font-weight: bold;
}

.featured-vehicle {
  background: linear-gradient(135deg, #00bcd4, #00acc1);
  border-radius: 10px;
  padding: 30px;
  margin-bottom: 30px;
  color: white;
}

.vehicle-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  align-items: center;
}

.vehicle-title {
  font-size: 2.8rem;
  font-weight: bold;
  margin-bottom: 20px;
  color: white;
}

.vehicle-features {
  margin-bottom: 25px;
}

.feature-item {
  font-size: 1.2rem;
  margin-bottom: 8px;
  color: white;
}

.price-section {
  margin-bottom: 25px;
}

.price-label {
  font-size: 1.3rem;
  font-weight: bold;
}

.price-amount {
  font-size: 2.2rem;
  font-weight: bold;
  margin-left: 10px;
}

.own-today-btn {
  background: #00838f;
  color: white;
  border: none;
  padding: 15px 30px;
  font-size: 1.2rem;
  font-weight: bold;
  border-radius: 5px;
  cursor: pointer;
  transition: background 0.3s ease;
}

.own-today-btn:hover {
  background: #006064;
}

.vehicle-image-section {
  text-align: center;
}

.vehicle-main-image {
  max-width: 100%;
  height: auto;
  border-radius: 10px;
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.bottom-sections {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 30px;
}

.vehicle-specs h3,
.vehicle-description h3 {
  font-size: 1.8rem;
  color: #333;
  margin-bottom: 20px;
  font-weight: bold;
}

.specs-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 15px;
}

.spec-card {
  background: #00bcd4;
  color: white;
  padding: 20px;
  border-radius: 8px;
  text-align: center;
  transition: transform 0.3s ease;
}

.spec-card:hover {
  transform: translateY(-3px);
}

.spec-icon {
  font-size: 2rem;
  margin-bottom: 10px;
}

.spec-label {
  font-size: 0.9rem;
  margin-bottom: 5px;
  opacity: 0.9;
}

.spec-value {
  font-size: 1.1rem;
  font-weight: bold;
}

.description-content {
  background: #f8f9fa;
  padding: 25px;
  border-radius: 8px;
  border-left: 4px solid #00bcd4;
}

.description-content p {
  font-size: 1.1rem;
  line-height: 1.6;
  color: #333;
  margin-bottom: 20px;
}

.description-highlights {
  margin-top: 20px;
}

.highlight {
  background: white;
  padding: 10px 15px;
  margin-bottom: 8px;
  border-left: 3px solid #00bcd4;
  font-style: italic;
  color: #555 !important;
}

/* Responsive Design */
@media (max-width: 1024px) {
  .vehicle-content {
    grid-template-columns: 1fr;
    gap: 25px;
  }
  
  .bottom-sections {
    grid-template-columns: 1fr;
    gap: 25px;
  }
}

@media (max-width: 768px) {
  .cse-container {
    margin: 10px;
    border-width: 4px;
  }
  
  .vehicle-detail-wrapper {
    padding: 20px;
  }
  
  .welcome-heading {
    font-size: 2rem;
  }
  
  .vehicle-title {
    font-size: 2rem;
  }
  
  .specs-grid {
    grid-template-columns: 1fr;
  }
  
  .featured-vehicle {
    padding: 20px;
  }
}

@media (max-width: 480px) {
  .vehicle-title {
    font-size: 1.5rem;
  }
  
  .price-amount {
    font-size: 1.8rem;
  }
  
  .own-today-btn {
    width: 100%;
    padding: 12px;
  }
}

.vehicle-reviews {
  margin-top: 40px;
  padding: 20px;
  background: #f8f9fa;
  border-radius: 8px;
  border-left: 4px solid #00bcd4;
}

.vehicle-reviews h3 {
  margin-bottom: 20px;
  font-size: 1.6rem;
  color: #333;
  font-weight: bold;
}

.vehicle-reviews form {
  margin-bottom: 20px;
}

.vehicle-reviews textarea {
  width: 100%;
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
  margin-bottom: 10px;
}

.vehicle-reviews button {
  background: #00bcd4;
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
}

.vehicle-reviews button:hover {
  background: #00838f;
}

.vehicle-reviews ul {
  list-style: none;
  padding: 0;
}

.vehicle-reviews li {
  margin-bottom: 15px;
  border-bottom: 1px solid #ddd;
  padding-bottom: 10px;
}

.btn-admin {
  display: inline-block;
  background: #f57c00;
  color: white;
  padding: 10px 20px;
  border-radius: 5px;
  text-decoration: none;
  font-weight: bold;
  margin-left: 10px;
}
.btn-admin:hover {
  background: #e65100;
}


</style>
